<!-- Contenedor principal con estilos personalizados -->
<div class="pizzas-container">
    <div class="container mt-4 text-center">
        <h1 class="text-center">Lista de Pizzas</h1>
        
        <!-- Contenedor de las tarjetas de pizzas -->
        <div class="row justify-content-center">
            {{#each pizzas}}
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{nombre}}</h5>
                        <p class="card-text">Tamaño: {{tam}}</p>
                        <p class="card-text">Precio: ${{precio}}</p>
                        <p class="card-text">Cantidad: {{cantidad}}</p>
                        <a href="#" class="btn btn-primary"><i class="fa-solid fa-cart-shopping"></i> Ordenar</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        <!-- Contenedor de los botones de paginación -->
        <div class="d-flex justify-content-center mt-3">
            {{#if hasPrevPage}}
                <a href="/pizzas?page={{prevPage}}" class="btn btn-outline-secondary mx-2">⬅ Anterior</a>
            {{/if}}
            {{#if hasNextPage}}
                <a href="/pizzas?page={{nextPage}}" class="btn btn-outline-secondary mx-2">Siguiente ➡</a>
            {{/if}}
        </div>
    </div>
</div>